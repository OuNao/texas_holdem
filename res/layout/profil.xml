<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/texas_holdem_icon"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonProfilStatistik"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/ProfilStatistiken" />

    <EditText
        android:id="@+id/editTextProfilName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:gravity="center" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/imageButtonProfilBild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonProfilStatistik"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextProfilName"
        android:src="@android:drawable/ic_menu_crop" />

</RelativeLayout>