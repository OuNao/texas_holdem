    android:orientation="vertical" >

    <Button
        android:id="@+id/main.btnNeuesSpiel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Neues Spiel" />

    <Button
        android:id="@+id/main.btnEinstellungen"
        android:layout_width="fill_parent"
